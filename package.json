{
  "name": "order-database",
  "version": "1.0.0",
  "description": "Data for the order domain",
  "author": {
    "name": "Jim Barrows",
    "email": "Jim.Barrows@gmail.copm"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build:database && npm run build:docker",
    "build:docker": "docker build --tag erpmicroservices/order-database --rm .",
    "build:database": "mkdir -p build && cat sql/V_orde*.sql > build/database_up.sql",
    "clean": "rm -rf build && rm -rf generated-sql && yes | docker rmi --force erpmicroservices/order-database && yes | docker volume prune && docker rm order-database",
    "migrate": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-order} -user=${DB_USER:-order} -password=${DB_PASSWORD:-order} migrate",
    "migrate:info": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-order} -user=${DB_USER:-order} -password=${DB_PASSWORD:-order} info",
    "migrate:validate": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-order} -user=${DB_USER:-order} -password=${DB_PASSWORD:-order} validate",
    "push": "docker push erpmicroservices/order-database:latest",
    "start": "docker run --publish 5432:5432 --name order-database erpmicroservices/order-database",
    "test": "cucumber-js --tags @party_database  --require-module @babel/register --require-module @babel/polyfill  -r ./features ../order-features"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ErpMicroServices/order-database.git"
  },
  "bugs": {
    "url": "https://github.com/ErpMicroServices/order-database/issues"
  },
  "homepage": "https://github.com/ErpMicroServices/order-database#readme",
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.2",
    "@cucumber/cucumber": "^7.0.0-rc.0",
    "chai": "^4.1.2",
    "csv-parse": "^4.6.5",
    "dotenv": "^16.0.3",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.10.0",
    "node-fetch": "^3.2.10",
    "node-flywaydb": "^3.0.7",
    "stream-transform": "^2.0.1",
    "uuid": "^8.3.2"
  }
}
